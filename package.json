{
  "name": "@flemzord/github-compliance",
  "repository": {
    "type": "git",
    "url": "https://github.com/flemzord/github-compliance.git"
  },
  "version": "1.0.0",
  "description": "ðŸ›¡ï¸ CLI to enforce repository compliance standards across your GitHub organization",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc --watch -p tsconfig.json",
    "dev": "tsx watch src/cli.ts",
    "cli": "tsx src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:biome && npm run lint:knip && npm run lint:types",
    "lint:fix": "npm run lint:knip:fix && npm run lint:biome:fix && npm run lint:types",
    "lint:biome": "biome check .",
    "lint:biome:fix": "biome check --write .",
    "lint:knip": "knip",
    "lint:knip:fix": "knip --fix --allow-remove-files",
    "lint:types": "tsc --noEmit",
    "format": "biome format --write .",
    "prepare": "npm run build"
  },
  "keywords": [
    "github",
    "compliance",
    "security",
    "governance"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@octokit/plugin-throttling": "^11.0.1",
    "@octokit/rest": "^22.0.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.1",
    "js-yaml": "^4.1.0",
    "log-update": "^7.0.0",
    "ora": "^9.0.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.4.0",
    "jest": "^30.1.3",
    "knip": "^5.63.1",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "bin": {
    "github-compliance-cli": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts"
}
